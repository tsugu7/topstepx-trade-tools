{
    "manifest_version": 3,
    "name": "ページタイトル表示",
    "version": "1.3",
    "description": "現在表示中のページのタイトルを取得して表示します",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  }